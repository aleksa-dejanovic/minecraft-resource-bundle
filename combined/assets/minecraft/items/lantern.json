{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "when": "gui",
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/lantern_item"
        }
      },
      {
        "when": "fixed",
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/lantern_item"
        }
      },
      {
        "when": "firstperson_lefthand",
        "model": {
          "type": "minecraft:model",
          "model": "minecraft:item/lantern_hand"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "minecraft:block/lantern"
    }
  }
}